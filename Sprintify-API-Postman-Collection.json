	"item": [
		{
			"name": "User Management",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{$randomEmail}}\",\n    \"password\": \"password123\",\n    \"fullName\": \"Test User\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/register",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"register"
							]
						},
						"description": "Register a new user"
					},
					"response": []
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"if (response.token) {",
									"    pm.environment.set('token', response.token);",
									"}",
									"",
									"if (response.user && response.user.id) {",
									"    pm.environment.set('userId', response.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"login"
							]
						},
						"description": "Login an existing user"
					},
					"response": []
				},
				{
					"name": "Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{emailVerificationToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/verify-email",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"verify-email"
							]
						},
						"description": "Verify user email address"
					},
					"response": []
				},
				{
					"name": "Forgot Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('Check the server console for the reset password token')"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/forget-password",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"forget-password"
							]
						},
						"description": "Request a password reset link"
					},
					"response": []
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{resetToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"newpassword123\",\n    \"tokenType\": \"RESET_PASSWORD\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/password-reset",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"password-reset"
							]
						},
						"description": "Reset user password"
					},
					"response": []
				},
				{
					"name": "Change Password (Authenticated)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"newpassword123\",\n    \"oldPassword\": \"password123\",\n    \"tokenType\": \"ACCESS\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/password-reset",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"password-reset"
							]
						},
						"description": "Change password while authenticated"
					},
					"response": []
				}
			],
			"description": "User registration, authentication, and account management"
		},
		{
			"name": "Profile Management",
