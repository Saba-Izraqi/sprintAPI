				{
					"name": "Update Profile (with Photo)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "fullName",
									"value": "User With Photo",
									"type": "text"
								},
								{
									"key": "profilePhoto",
									"type": "file",
									"src": "/path/to/your/photo.jpg"
								}
							]
						},
						"url": {
							"raw": "http://localhost:4000/api/v1/user/update-profile",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"api",
								"v1",
								"user",
								"update-profile"
							]
						},
						"description": "Update user's name and profile photo"
					},
					"response": []
				}
			],
